generator client {
  provider      = "prisma-client-js"
  binaryTargets = ["native"]
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id            Int            @id @default(autoincrement())
  auth0Id       String         @unique
  email         String         @unique
  roleId        Int
  role          Role           @relation(fields: [roleId], references: [id])
  organizations Organization[]
  projects      Project[]      @relation("createdProjects")
  layers        Layer[]        @relation("createdLayers")
}

model Role {
  id    Int    @id @default(autoincrement())
  name  String
  users User[]
}

model Organization {
  id       Int       @id @default(autoincrement())
  name     String
  users    User[]
  projects Project[]
}

model Project {
  id             Int          @id @default(autoincrement())
  name           String
  description    String?
  createdById    Int
  createdBy      User         @relation(fields: [createdById], references: [id], name: "createdProjects")
  organizationId Int
  organization   Organization @relation(fields: [organizationId], references: [id])
  layers         Layer[]
}

model Layer {
  id          Int       @id @default(autoincrement())
  name        String
  projectId   Int
  project     Project   @relation(fields: [projectId], references: [id])
  type        String
  createdById Int
  createdBy   User      @relation(fields: [createdById], references: [id], name: "createdLayers")
  line        line[]
  point       point[]
  polygon     polygon[]
}

model contours {
  gid        Int                      @id @default(autoincrement())
  elevation  Decimal?                 @db.Decimal(10, 0)
  type       Decimal?                 @db.Decimal(5, 0)
  update_sta Decimal?                 @db.Decimal(19, 11)
  shape_leng Decimal?                 @db.Decimal(19, 11)

}

model soils {
  ogc_fid    Int      @id @default(autoincrement())
  areasymbol String?  @db.VarChar(20)
  spatialver Decimal? @db.Decimal(10, 0)
  musym      String?  @db.VarChar(6)
  mukey      String?  @db.VarChar(30)
}

/// This table contains check constraints and requires additional setup for migrations. Visit https://pris.ly/d/check-constraints for more info.
model spatial_ref_sys {
  srid      Int     @id
  auth_name String? @db.VarChar(256)
  auth_srid Int?
  srtext    String? @db.VarChar(2048)
  proj4text String? @db.VarChar(2048)
}

model line {
  id     Int     @id @default(autoincrement())
  type   String? @db.VarChar
  in_prj String? @db.VarChar
  notes  String?

  layerId Int
  layer   Layer @relation(fields: [layerId], references: [id])
}

model point {
  id     Int     @id @default(autoincrement())
  type   String? @db.VarChar
  in_prj String? @db.VarChar
  notes  String?

  layerId Int
  layer   Layer @relation(fields: [layerId], references: [id])
}

model polygon {
  id     Int     @id @default(autoincrement())
  type   String? @db.VarChar
  in_prj String? @db.VarChar
  notes  String?

  layerId Int
  layer   Layer @relation(fields: [layerId], references: [id])
}
